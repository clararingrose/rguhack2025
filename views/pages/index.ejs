    <!DOCTYPE html>
    <html lan="en">
        
        <head>
            <%- include('../partials/head') %> 
            <script type = "application/javascript" src="openai.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

            <script>
                async function getInput() {
                    const input = document.getElementById("input").value;
                    const conversation = document.getElementById("conversation");
                    const role = document.getElementById("role").value;
                    console.log(JSON.stringify({ prompt: input, role: role})) //DO NOT REMOVE

                    if (!input) {
                        alert("Please enter a message.");
                        return;
                    }

                    conversation.value += `You: ${input}\n`;

                    try {
                        const response = await fetch("/", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ prompt: input }, {role: role})
                        });

                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }

                        const data = await response.json();
                        console.log(data)
                        conversation.value += `AI: ${data.response}\n`;
                        links = document.getElementById("links")
                        links.style.display = 'block';
                        links.style.marginLeft = "auto";
                        links.style.marginRight = "auto";


                        document.getElementById("Mentioned").style.color = 'black';
                        if(data.response.toLowerCase().includes("breathing space") && !(links.value.toLowerCase().includes("breathing space"))){
                            links.value += "Breathing Space: https://www.breathingspace.scot/ \n"
                        }

                        if(data.response.toLowerCase().includes("abz") && !(links.value.toLowerCase().includes("abz"))){
                            links.value += "ABZ Works: https://abzworks.co.uk/ \n"
                        }
                        if(data.response.toLowerCase().includes("citizens") && !(links.value.toLowerCase().includes("citizens"))){
                            links.value += "Citizens Advice: https://www.cas.org.uk/helptoclaim \n"
                        }
                        if(((data.response.toLowerCase().includes("samh") && !(links.value.toLowerCase().includes("samh"))) || (data.response.toLowerCase().includes("scottish association for mental health") && !(links.value.toLowerCase().includes("samh"))))){
                            links.value += "SAMH (Scottish Association for Mental Health): https://www.samh.org.uk/ \n"
                        }
                        if(((data.response.toLowerCase().includes("swf") && !(links.value.toLowerCase().includes("swf"))) || (data.response.toLowerCase().includes("scottish welfare fund") && !(links.value.toLowerCase().includes("swf"))))){
                            links.value += "SWF (Scottish Welfare Fund): https://www.mygov.scot/scottish-welfare-fund or https://www.aberdeencity.gov.uk/services/benefits-and-advice/apply-scottish-welfare-fund \n"
                        }

                        if(data.response.toLowerCase().includes("conflict resolution") && !(links.value.toLowerCase().includes("scottish conflict resolution"))){
                            links.value += "Scottish Conflict Resolution: https://www.scottishconflictresolution.org.uk/ \n"
                        }


                    } catch (error) {
                        console.error("Error:", error);
                        conversation.value += `Error: ${error.message}\n`;
                    }

                    document.getElementById("input").value = "";
                }

                async function getSummary(){
                    const topic = document.getElementById("topic")
                    const conversation = document.getElementById("conversation");

                    conversation.value += "You: give me a brief overview of " + topic.value +  "\n";
                    const role = document.getElementById("role").value;
                    console.log("role in ejs " + role)
                    const input = "give me a brief overview of " + topic.value

                    console.log(JSON.stringify({ prompt: input, role: role})) //DO NOT REMOVE
                    try {
                        const response = await fetch("/", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ prompt: input, role: role})

                        });

                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }
                        const data = await response.json();

                        conversation.value += `AI: ${data.response}\n`;
                        links = document.getElementById("links")
                        
                        links.style.display = 'block';
                        // links.style.textAlign = center;


                        document.getElementById("Mentioned").style.color = 'black';
                        
                        links.style.marginLeft = "auto";
                        links.style.marginRight = "auto";

                        
                        
                        if(data.response.toLowerCase().includes("breathing space") && !(links.value.toLowerCase().includes("breathing space"))){
                            links.value += "Breathing Space: https://www.breathingspace.scot/ \n"
                            document.getElementById("bs").style.display = "block"
                        }

                        if(data.response.toLowerCase().includes("abz") && !(links.value.toLowerCase().includes("abz"))){
                            links.value += "ABZ Works: https://abzworks.co.uk/ \n"
                            document.getElementById("abz").style.display = "block"

                        }
                        if(data.response.toLowerCase().includes("citizens") && !(links.value.toLowerCase().includes("citizens"))){
                            links.value += "Citizens Advice: https://www.cas.org.uk/helptoclaim \n"
                            document.getElementById("cas").style.display = "block"

                        }
                        if(((data.response.toLowerCase().includes("samh") && !(links.value.toLowerCase().includes("samh"))) || (data.response.toLowerCase().includes("scottish association for mental health") && !(links.value.toLowerCase().includes("samh"))))){
                            links.value += "SAMH (Scottish Association for Mental Health): https://www.samh.org.uk/ \n"
                            document.getElementById("samh").style.display = "block"

                        }
                        if(((data.response.toLowerCase().includes("swf") && !(links.value.toLowerCase().includes("swf"))) || (data.response.toLowerCase().includes("scottish welfare fund") && !(links.value.toLowerCase().includes("swf"))))){
                            links.value += "SWF (Scottish Welfare Fund): https://www.mygov.scot/scottish-welfare-fund or https://www.aberdeencity.gov.uk/services/benefits-and-advice/apply-scottish-welfare-fund \n"
                            document.getElementById("swf").style.display = "block"
                            
                        }

                        if(data.response.toLowerCase().includes("conflict resolution") && !(links.value.toLowerCase().includes("scottish conflict resolution"))){
                            links.value += "Scottish Conflict Resolution: https://www.scottishconflictresolution.org.uk/ \n"
                            document.getElementById("scr").style.display = "block"

                        }
                    } catch (error) {
                        console.error("Error:", error);
                        conversation.value += `Error: ${error.message}\n`;
                    }
                }
                let slideIndex = 1;
                showSlides(slideIndex);

                // Next/previous controls
                function plusSlides(n) {
                showSlides(slideIndex += n);
                }

                // Thumbnail image controls
                function currentSlide(n) {
                showSlides(slideIndex = n);
                }

                function showSlides(n) {
                let i;
                let slides = document.getElementsByClassName("mySlides");
                let dots = document.getElementsByClassName("dot");
                if (n > slides.length) {slideIndex = 1}
                if (n < 1) {slideIndex = slides.length}
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" active", "");
                }
                slides[slideIndex-1].style.display = "block";
                dots[slideIndex-1].className += " active";
                }

                            </script>
        </head>
        <body>
            <%- include('../partials/header') %> 

            <div id="llm">
                <h1>Prevention Tool</h1>
                <h2>conversation</h2>
                <textarea id="conversation" readonly></textarea>

                <h2>user input</h2>
                <textarea id="input"></textarea>
                <br><br>

                <label for="role">Who are you asking for?</label>
                <select name="role" id="role">
                    <option value="user">Yourself</option>
                    <option value="service">Someone you know</option>
                </select>
                <button id="sendbutton" onclick="getInput()">send</button>
                <br><br>

                <h3>or choose a topic below to get a brief overview</h3>
                <select name="topic" id="topic">
                    <option value="Finance">Finance</option>
                    <option value="Health">Health</option>
                    <option value="Employment">Employment</option>
                    <option value="Domestic Abuse">Domestic Abuse</option>
                </select>
                <button id="summaryButton" onclick="getSummary()">get summary</button>



                <h2 id="Mentioned">Mentioned websites:</h2>
                <textarea id="links" readonly></textarea>
                <div id="box">
                    <h4>My Links</h4>
                    <p id="swf"><a href=https://www.aberdeencity.gov.uk/services/benefits-and-advice/apply-scottish-welfare-fund>Scottish Welfare Fund (SWF)</a></p>
                    <p id="bs"><a href="https://www.breathingspace.scot/ "> Breathing Space</a></p>
                    <p id="abz"><a href="https://abzworks.co.uk/">ABZ Works</a></p>
                    <p id="cas"><a href="https://www.cas.org.uk/helptoclaim">Citizens advice</a></p>
                    <p id="samh"><a href="https://www.samh.org.uk/">Scottish Association for Mental Health (SAMH)</a></p>
                    <p id="scr"><a href="https://www.scottishconflictresolution.org.uk/">Scottish Conflict Resolution</a></p>
                    </div>
            </div>

            <div>
                <button type="button" onclick="">Download</button>
            </div>
            
            <div class="slideshow-container">

                <!-- Full-width images with number and caption text -->
                <div class="mySlides fade">
                  <div class="numbertext">1 / 3</div>
                  <img src="assets\images\image0.jpg" style="width:100%">
                  <div class="text">Caption Text</div>
                </div>
              
                <div class="mySlides fade">
                  <div class="numbertext">2 / 3</div>
                  <img src="assets\images\image0.jpg" style="width:100%">
                  <div class="text">Caption Two</div>
                </div>
              
                <div class="mySlides fade">
                  <div class="numbertext">3 / 3</div>
                  <img src="assets\images\image0.jpg" style="width:100%">
                  <div class="text">Caption Three</div>
                </div>
              
                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
              </div>
              <br>
              
              <!-- The dots/circles -->
              <div style="text-align:center">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
